<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#797474">

    <TextView
        android:id="@+id/tvreport"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:gravity="center"
        android:text="Report an Accident"
        android:padding="5dp"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:id="@+id/llhidden"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden2"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden3"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llclick"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/roundbutton"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivclick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/photocamera" />

        <Button
            android:id="@+id/btnclick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:clickable="false"

            android:text="Click Photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/roundbutton"

        android:gravity="left"
        android:layout_marginTop="30dp"
        android:id="@+id/lllocation">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/placeholder"
            android:id="@+id/ivlocation"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/btnlocation"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:clickable="false"

            android:text="Location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/roundbutton"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:id="@+id/llcontact">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/phonereceiver"
            android:id="@+id/ivcontact"
            android:background="@drawable/roundbutton"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/btncontact"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:clickable="false"

            android:text="Contact" />
    </LinearLayout>

        <Button
            android:id="@+id/btnreport"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/roundbuttondark"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Report"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

</LinearLayout>