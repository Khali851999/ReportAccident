<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#797474">

    <TextView
        android:id="@+id/tvreport"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Report an Accident"
        android:padding="5dp"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:id="@+id/llhiddenPhoto"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden2"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivhidden3"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llclick"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:background="@drawable/roundbutton"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivclick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/photocamera" />

        <TextView
            android:id="@+id/btnclick"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:clickable="false"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="Click Photo" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:id="@+id/llhiddenLocation"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tvhiddenLocation"
            android:gravity="center"
            android:textSize="20sp"
            android:maxLines="1"
            android:textColor="#000000"
            android:hint="Location"
            android:background="@drawable/roundbutton"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="View on Map"
            android:textColor="#FFFFFF"
            android:padding="3dp"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:id="@+id/btnhiddenViewLocation"
            android:background="@drawable/roundbutton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/roundbutton"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:id="@+id/lllocation">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"

            android:src="@drawable/placeholder"
            android:id="@+id/ivlocation"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/btnlocation"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="Location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llhiddencontact"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:id="@+id/tvName"
            android:textColor="#000000"
            android:background="@drawable/roundbutton"
            android:text="Name" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:id="@+id/tvContact"
            android:background="@drawable/roundbutton"
            android:text="Contact Number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/roundbutton"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:id="@+id/llcontact">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/phonereceiver"
            android:id="@+id/ivcontact"
            android:layout_marginLeft="5dp"
            android:background="@drawable/roundbutton"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/btncontact"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:padding="10dp"
            android:textSize="25dp"
            android:text="Contact" />
    </LinearLayout>

        <Button
            android:id="@+id/btnreport"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/roundbuttondark"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Report"
            android:clickable="false"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

</LinearLayout>